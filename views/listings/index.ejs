<% layout("/layouts/boilerplate") %>
<h3>All Listings</h3>

<style>
    .card-img-container {
        position: relative;
    }
    
    .card-img-overlay {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(215, 25, 25, 0); /* Fully transparent initially */
        transition: background-color 0.3s ease; /* Smooth transition */
    }
    
    .card-img-container:hover .card-img-overlay {
        background-color: rgba(215, 25, 25, 0.5); /* Semi-transparent background color on hover */
    }
</style>

<div class="row">
    <% for(let listing of allListings) { %>
        <div class="col-12 col-sm-6 col-md-4">
            <a href="/listings/<%= listing._id %>" style="text-decoration: none; color: inherit;">
                <div class="card listing-card">
                    <div class="card-img-container">
                        <img src="<%= listing.image %>" class="card-img-top custom-img-height" alt="listing_image" style="height: 20rem; object-fit: cover;">
                        <div class="card-img-overlay">dfgfd</div>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b> <br>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                        </p>
                    </div>
                </div>
            </a>
        </div>
    <% } %>
</div>
